- document_title = "#{ strip_tags(@book.headline) } | #{ t('.title') } | #{ t('site.title') }"
- set_meta_tags title: document_title,
                description: '',
                open_graph: { title: document_title }

section

  = render 'header', title: t('.title'), document_title: document_title

  section.details
    p.main= link_to_unless_current_or_wrap main_details(@book).html_safe, @book
    p= contributors(@book)
    p= classification(@book)
    p= links(@book)

  / iframe src="http://books.google.de/books?id=#{ @book.google_books_id }&lpg=PR1&ots=Hfep-dhu0H&d&pg=PR1&output=embed"

  = render 'citations/citations_list', citations: sort_by_page_reference(@book.notes.publishable.citations), books: @books unless @book.notes.publishable.citations.empty?

  = render 'shared/notes_list', notes: @book.notes.publishable.listable unless @book.notes.publishable.listable.empty?

  = render 'books_list', title: t('.related_books'), books: @related_books unless @related_books.empty?

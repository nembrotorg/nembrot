- document_title = "#{ t('.title') } | #{ t('site.title') }"
- set_meta_tags title: document_title,
                description: '',
                open_graph: { title: document_title }

div data-channel-name="#{ @current_channel.name }" data-channel_id="#{ @current_channel.id }" data-channel_slug="#{ @current_channel.slug }" data-theme-wrapper="true" class="theme-#{ @current_channel.theme }"

  nav = render_breadcrumbs builder: ::OrderedListBuilder

  section

    = render 'header', title: t('.title'), subtitle: "#{ current_user.authorizations.where(provider: 'evernote').first.nickname }'s channels", document_title: document_title, show_flashes: true

    ul
      - @channels.each do |channel|
        li
          = link_to channel.name, edit_channel_path(channel), title: "Change settings for #{ channel.name }"
          = link_to 'View', home_path(channel), class: 'show-channel', title: "View #{ channel.name }"

    p = link_to 'New Channel', new_channel_path

a href='#close'
  | Close

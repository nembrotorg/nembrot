- document_title = "#{ t('.title') } | #{ t('devise.title') } | #{ @current_channel_name } | #{ t('site.title') }"
- set_meta_tags title: document_title

- add_breadcrumb t('devise.sessions.new.title'), new_user_session_path
- add_breadcrumb t('.title'), new_user_password_path

div data-theme-wrapper="true" class="theme-#{ @current_channel_theme }"

  div class="#{ controller.controller_name }-#{ controller.action_name }"

    nav = render_breadcrumbs builder: ::OrderedListBuilder

    = render 'header', title: t('.title'), subtitle: nil, document_title: document_title

    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!

      = f.label :email do
        = :email.to_s.humanize
        = f.email_field :email, autofocus: true

      = f.submit t('.submit')

    = render 'devise/shared/links'

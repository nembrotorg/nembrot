section.downloads

  header
    h3 = title ||= t('notes.show.downloads_title')

  ul
    - downloads.each do |download|
      li
        - file_loc = File.join(Rails.root, 'public', 'resources', 'raw', "#{ download.local_file_name }.#{ download.file_ext }")
        - if File.file?(file_loc)
          - size = number_to_human_size(File.size( file_loc )).titlecase
          = link_to "#{ download.local_file_name }.#{ download.file_ext } (#{ size })", "#{ Constant.asset_host }/resources/raw/#{ download.local_file_name }.#{ download.file_ext }", :title => "Right-click to download", :download => "#{ download.local_file_name }.#{ download.file_ext }"

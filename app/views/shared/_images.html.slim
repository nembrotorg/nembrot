- images.each do |image|
  figure.image
    = link_to image_tag(cut_image_binary_path(image, type: type), alt: strip_tags(image.description)), 
       cut_image_binary_path(image, width: Settings.styling.images.expanded.width)
    - unless image.caption.blank?
      figcaption
        = simple_blurbify(image.caption)
        - unless image.credit.blank?
          span.credit= simple_blurbify(image.credit)

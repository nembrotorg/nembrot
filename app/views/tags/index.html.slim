- cache [cache_buster(1), @tags] do

  - document_title = "#{ t('.title') } | #{ @current_channel.name } | #{ t('site.title') }"
  - set_meta_tags title: document_title,
                  description: '',
                  open_graph: { title: document_title }
  - note = @home_note

  == page_wrapper

    = render 'header', title: t('.title'), subtitle: nil, document_title: document_title

    = render 'shared/images', note: note, type: :standard unless note.resources.attached_images.empty? || note.has_instruction?('hide_image')

    - unless @tags.empty?
      = render 'tags_list', tags: @tags

      -# REVIEW: Add tags to maps
      -#= render 'shared/map_script', map: @map unless @map.blank?

      aside.statistics
        = t('.statistics', count: number_with_delimiter(@tags_count), references_count: number_with_delimiter(@references_count))

      -# = paginate @tags
